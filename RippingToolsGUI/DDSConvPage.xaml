<Page
    x:Class="RippingToolsGUI.DDSConvPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RippingToolsGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DDSConvPage"
    d:DesignHeight="750"
    d:DesignWidth="834"
    Background="#212121"
    mc:Ignorable="d">

    <Grid>
        <Button
            x:Name="btnSelectDDS"
            Width="267"
            Height="56"
            Margin="22,481,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnSelectDDS_Click"
            Content="Select *.dds textures directory"
            FontSize="18" />
        <Button
            x:Name="btnFixForcesDDS"
            Width="267"
            Height="56"
            Margin="0,559,22,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="btnFixForcesDDS_Click"
            Content="Fix Forces *.dds"
            FontSize="18" />
        <Button
            x:Name="btnConvDDS"
            Width="267"
            Height="56"
            Margin="0,481,22,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="btnConvDDS_Click"
            Content="Convert to *.png"
            FontSize="18" />
        <ListBox
            x:Name="listBox"
            Height="435"
            Width="790"
            MinHeight="135"
            Margin="0,22,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <Button
            x:Name="btnFixStreaming"
            Width="267"
            Height="56"
            Margin="0,637,22,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="btnFixStreaming_Click"
            Content="Fix Frontiers / Shadow *.dds"
            FontSize="18" />
        <Button
            x:Name="btnSelectStreamingPath"
            Width="267"
            Height="56"
            Margin="22,559,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnSelectStreamingPath_Click"
            Content="Select streaming path directory"
            FontSize="18" />
    </Grid>
</Page>
