<Page
    x:Class="RippingToolsGUI.ModelFBXPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RippingToolsGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ModelFBXPage"
    d:DesignHeight="750"
    d:DesignWidth="834"
    Background="#212121"
    mc:Ignorable="d">

    <Grid>
        <Rectangle
            Height="117"
            MinWidth="500"
            MinHeight="135"
            Margin="22,22,22,0"
            VerticalAlignment="Top"
            Fill="#2d2c2c" />

        <Label
            Margin="33,22,365,0"
            VerticalAlignment="Top"
            Content="Model"
            FontSize="24" />
        <Label
            Margin="51,69,573,0"
            VerticalAlignment="Top"
            Content="Model file (*.model)"
            FontSize="18" />
        <TextBox
            x:Name="txtBoxModel"
            Height="28"
            MinWidth="450"
            MinHeight="25"
            Margin="261,75,123,0"
            VerticalAlignment="Top"
            Background="#212121"
            FontSize="18"
            Text="None"
            TextWrapping="Wrap" />
        <Button
            x:Name="btnSelectModel"
            Height="28"
            Margin="722,74,84,0"
            VerticalAlignment="Top"
            Background="#212121"
            Click="btnSelectModel_Click"
            Content="..." />


        <Label
            Margin="51,108,573,0"
            VerticalAlignment="Top"
            Content="Skeleton file (*.skl.hkx)"
            FontSize="18" />
        <TextBox
            x:Name="txtBoxSkl"
            Height="28"
            Margin="261,111,123,0"
            VerticalAlignment="Top"
            Background="#212121"
            FontSize="18"
            Text="None"
            TextWrapping="Wrap" />
        <Button
            x:Name="btnSelectSkl"
            Height="28"
            Margin="722,111,84,0"
            VerticalAlignment="Top"
            Background="#212121"
            Click="btnSelectSkl_Click"
            Content="..." RenderTransformOrigin="0.5,0.5" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button
            x:Name="btnClearSkl"
            Height="28"
            Margin="761,111,45,0"
            VerticalAlignment="Top"
            Background="#212121"
            Click="btnClearSkl_Click"
            Content="X" RenderTransformOrigin="0.5,0.5" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Rectangle
            Height="135"
            MinWidth="500"
            MinHeight="100"
            Margin="22,186,22,0"
            VerticalAlignment="Top"
            Fill="#2d2c2c" />


        <Label
            Margin="33,186,362,0"
            VerticalAlignment="Top"
            Content="Settings"
            FontSize="24" />
        <CheckBox
            x:Name="checkBoxConvAnim"
            Width="297"
            Height="32"
            Margin="51,272,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF212121"
            Click="checkBoxConvAnim_Click"
            Content=" Convert Animations (*.anm.hkx)"
            FontSize="18" />
        <CheckBox
            x:Name="checkBoxConvAnimNoModel"
            Width="346"
            Height="32"
            Margin="348,272,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF212121"
            Click="checkBoxConvAnimNoModel_Click"
            Content=" Convert Animations Without Model"
            FontSize="18" />
        <Label
            Margin="51,233,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="ModelFBX Version"
            FontSize="18" Width="210" />

        <Button
            x:Name="btnBat"
            Width="186"
            Height="44"
            Margin="22,343,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF2D2C2C"
            Click="btnBat_Click"
            Content="Convert"
            FontSize="24" />

        <ComboBox
            x:Name="comboBoxModelFBXVersion"
            Width="445"
            Margin="261,236,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF212121"
            BorderBrush="Transparent"
            FontSize="16"
            SelectionChanged="comboBoxModelFBXVersion_SelectionChanged" Height="28">
            <ComboBoxItem
                Background="Transparent"
                BorderBrush="Transparent"
                FontSize="16">
                <Label Content="Default" />
            </ComboBoxItem>
            <ComboBoxItem
                Background="Transparent"
                BorderBrush="Transparent"
                FontSize="16"
                Foreground="White">
                <Label Content="2012" />
            </ComboBoxItem>
        </ComboBox>



    </Grid>
</Page>
