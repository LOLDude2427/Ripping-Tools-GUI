<Page
    x:Class="RippingToolsGUI.ColConvPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RippingToolsGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ColConvPage"
    d:DesignHeight="750"
    d:DesignWidth="834"
    Background="#212121"
    mc:Ignorable="d">

    <Grid>
        <ListBox
            x:Name="listBoxColView"
            Height="435"
            Width="790"
            MinHeight="135"
            Margin="0,22,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <ComboBox
            x:Name="comboBoxColVersion"
            Width="267"
            Height="56"
            Margin="0,481,22,0"
            Background="#FF212121"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" SelectionChanged="comboBoxColVersion_SelectionChanged">
            <ComboBoxItem FontSize="16">
                <Label Content="Generations" />
            </ComboBoxItem>
            <ComboBoxItem FontSize="16">
                <Label Content="Lost World" />
            </ComboBoxItem>
        </ComboBox>
        <Label
            Margin="0,492,301,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            FontSize="18"
            Content="Type of *.phy.hkx" RenderTransformOrigin="0.5,0.5" Width="156" HorizontalContentAlignment="Right" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button
            x:Name="btnSelectCol"
            Width="267"
            Height="56"
            Margin="22,481,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnSelectCol_Click"
            Content="Select *.phy.hkx directory"
            FontSize="18" />
        <Button
            x:Name="btnConvCol"
            Width="267"
            Height="56"
            Margin="0,559,22,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="btnConvCol_Click"
            Content="Convert"
            FontSize="18" />
    </Grid>
</Page>
