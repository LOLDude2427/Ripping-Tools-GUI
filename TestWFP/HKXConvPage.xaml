<Page
    x:Class="TestWFP.HKXConvPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestWFP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HKXConvPage"
    d:DesignHeight="750"
    d:DesignWidth="834"
    Background="#212121"
    mc:Ignorable="d">

    <Grid>
        <ListBox
            x:Name="listBoxHKXView"
            Height="435"
            Width="790"
            MinHeight="135"
            Margin="0,22,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <ComboBox
            x:Name="comboBoxHKXVersion"
            Width="267"
            Height="56"
            Margin="0,481,22,0"
            Background="#FF212121"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" SelectionChanged="comboBoxHKXVersion_SelectionChanged">
            <ComboBoxItem FontSize="16">
                <Label Content="Unleashed" />
            </ComboBoxItem>
            <ComboBoxItem FontSize="16">
                <Label Content="Forces" />
            </ComboBoxItem>
        </ComboBox>
        <Label
            Margin="0,492,301,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            FontSize="18"
            Content="Type of *.hkx" RenderTransformOrigin="0.5,0.5" Width="133" HorizontalContentAlignment="Right" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button
            x:Name="btnSelectHKX"
            Width="267"
            Height="56"
            Margin="22,481,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnSelectHKX_Click"
            Content="Select *.hkx directory"
            FontSize="18" />
        <Button
            x:Name="btnConvHKX"
            Width="267"
            Height="56"
            Margin="0,559,22,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="btnConvHKX_Click"
            Content="Convert"
            FontSize="18" />
    </Grid>
</Page>
